{
  "compilerOptions": {
    /* Output directory for compiled JS */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Language and module settings */
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],

    /* Node.js compatibility */
    "esModuleInterop": true,
    "resolveJsonModule": true,           // ✅ NEW: allow importing JSON
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Strict type checking */
    "strict": true,

    /* For debugging */
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],   // ✅ include JSON files
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.py",                     // ✅ ignore python
    "src/**/requirements.txt"          // ✅ ignore requirements files
  ]
}
